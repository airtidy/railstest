<!DOCTYPE html>
<html>
  <head>
    <title>Railtest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <span><%= link_to "Home", root_path, class: 'navbutton' %></span>
    <% if !current_user %>
        <span><%= link_to "Login", new_user_session_path, class: 'navbutton' %></span>
    <% else %>

        <span><%= link_to "Rankings", ranking_view_path, class: 'navbutton' %></span>
        <span><%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'navbutton' %></span>
    <% end %>

    <%= yield %>
  </body>
</html>
